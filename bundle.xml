<?xml version="1.0" encoding="utf-8"?>
<adapt_framework>
  <bundle>
    <label>Bootstrap</label>
    <name>bootstrap</name>
    <type>framework</type>
    <version>3.3.2</version>
    <namespace>/frameworks/bootstrap</namespace>
    <description>Bootstrap is the most popular HTML, CSS, and JS framework for developing responsive, mobile first projects on the web.</description>
    <copyright>2015 Twitter</copyright>
    <license>MIT</license>
    <settings>
      <category name="Mobile display">
        <setting>
          <name>bootstrap.allow_zooming</name>
          <label>Should mobile devices be allowed to zoom?</label>
          <allowed_values>
            <value>Yes</value>
            <value>No</value>
          </allowed_values>
          <default_values>
            <value>No</value>
          </default_values>
        </setting>
      </category>
    </settings>
    <depends_on><bundle>jquery</bundle></depends_on>
  </bundle>
</adapt_framework>
